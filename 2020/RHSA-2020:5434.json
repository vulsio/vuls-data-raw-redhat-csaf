	"vulnerabilities": [
		{
			"cve": "CVE-2020-13867",
			"cwe": {
				"id": "CWE-276",
				"name": "Incorrect Default Permissions"
			},
			"discovery_date": "2020-06-17T00:00:00+00:00",
			"ids": [
				{
					"system_name": "Red Hat Bugzilla ID",
					"text": "1848143"
				}
			],
			"notes": [
				{
					"category": "description",
					"text": "An access flaw was found in targetcli, where the `/etc/target` and underneath backup directory/files were world-readable. This flaw allows a local attacker to access potentially sensitive information such as authentication credentials from the /etc/target/saveconfig.json and backup files. The highest threat from this vulnerability is to confidentiality.",
					"title": "Vulnerability description"
				},
				{
					"category": "summary",
					"text": "targetcli: weak permissions for /etc/target and backup files",
					"title": "Vulnerability summary"
				},
				{
					"category": "other",
					"text": "The version of targetcli shipped with Red Hat Ceph Storage 3 sets the world-readable permissions for `/etc/target` and `/etc/target/backup` directory that store the sensitive information, hence affected by this vulnerability.",
					"title": "Statement"
				},
				{
					"category": "general",
					"text": "The CVSS score(s) listed for this vulnerability do not reflect the associated product's status, and are included for informational purposes to better understand the severity of this vulnerability.",
					"title": "CVSS score applicability"
				}
			],
