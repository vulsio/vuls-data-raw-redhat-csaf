					"product_ids": [
						"BaseOS-8.0.0.Z.E4S:sudo-0:1.8.25p1-4.el8_0.3.ppc64le",
						"BaseOS-8.0.0.Z.E4S:sudo-0:1.8.25p1-4.el8_0.3.src",
